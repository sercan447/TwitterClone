<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="#fff"></stroke>
            <solid android:color="#DD999999"></solid>

            <padding android:left="5dp" android:top="5dp"
                        android:right="5dp" android:bottom="5dp"></padding>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


    <item>
        <shape  xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="#345"></stroke>
            <solid android:color="@color/colorAccent"></solid>
            <padding android:left="5dp" android:top="5dp"
                android:bottom="5dp" android:right="5dp"></padding>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>


</selector>