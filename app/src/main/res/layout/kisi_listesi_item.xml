<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:transitionName="profilImage"
            android:id="@+id/imageview_arama"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_person"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:transitionName="adsoyad"
            android:id="@+id/tv_aramaAdsoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Sercan YERGOK"/>

        <TextView
            android:transitionName="kullaniciadi"
            android:id="@+id/tv_aramakullaniciAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="veba"/>

        <TextView
            android:transitionName="mail"
            android:id="@+id/tv_aramaMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sercan.goger@gmail.com"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>