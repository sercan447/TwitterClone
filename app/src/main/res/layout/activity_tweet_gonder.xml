<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetGonder">

    <EditText
        android:id="@+id/edit_twwetat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lines="7"
        android:layout_marginStart="31dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="Neler olup bitiyor..?"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_savac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_savac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="35dp"
        android:text="280"
        app:layout_constraintEnd_toEndOf="@+id/edit_twwetat"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewim"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="94dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/fab_tweetat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_savac"
        tools:srcCompat="@mipmap/icon" />

    <ImageButton
        android:id="@+id/imbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/edit_twwetat"
        app:layout_constraintTop_toBottomOf="@+id/edit_twwetat"
        app:srcCompat="@drawable/ic_add_a_photo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tweetat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="33dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_check" />
</android.support.constraint.ConstraintLayout>